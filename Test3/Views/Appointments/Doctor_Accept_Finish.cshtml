@model Test3.Models.Appointment

@{
    ViewBag.Title = "Doctor Accept";
}

<h2>Doctor Accept</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Appointment</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Appointment_id)

    <div class="form-group">
        @Html.LabelFor(model => model.Patient_id, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Patient_id)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Doctor_id, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Doctor_id)
        </div>
    </div>

    <div class="form-group">
        @Html.HiddenFor(model => model.Doctor_id)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Patient_email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Patient_email)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Date)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Status, new SelectList(new[] { "pending acceptance", "accept", "finished" }), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Doctor_Index", new { id = Model.Doctor_id })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
